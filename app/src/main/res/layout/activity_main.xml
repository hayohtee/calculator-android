<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    app:flexDirection="column"
    tools:context=".MainActivity">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/output_container_background"
        android:padding="20dp"
        app:flexDirection="column"
        app:justifyContent="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/solution_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 + 3 * 5"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="50sp"
            app:layout_alignSelf="flex_end" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/result_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="50"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="30sp"
            app:layout_alignSelf="flex_end" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        app:alignContent="space_around"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="space_evenly">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ac_button"
            style="@style/button_style_1"
            android:text="AC" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bracket_button"
            style="@style/button_style_2"
            android:text="( )" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modulo_button"
            style="@style/button_style_2"
            android:text="%" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/divide_button"
            style="@style/button_style_2"
            android:text="/" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven_button"
            style="@style/button_style_3"
            android:text="7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight_button"
            style="@style/button_style_3"
            android:text="8" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine_button"
            style="@style/button_style_3"
            android:text="9" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply_button"
            style="@style/button_style_2"
            android:text="*" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four_button"
            style="@style/button_style_3"
            android:text="4" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/five_button"
            style="@style/button_style_3"
            android:text="5" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/six_button"
            style="@style/button_style_3"
            android:text="6" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/subtract_button"
            style="@style/button_style_2"
            android:text="-" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/one_button"
            style="@style/button_style_3"
            android:text="1" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/two_button"
            style="@style/button_style_3"
            android:text="2" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/three_button"
            style="@style/button_style_3"
            android:text="3" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_button"
            style="@style/button_style_2"
            android:text="+" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero_button"
            style="@style/button_style_3"
            android:text="0" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot_button"
            style="@style/button_style_3"
            android:text="." />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_button"
            style="@style/button_style_3"
            android:text="C" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/equal_button"
            style="@style/button_style_4"
            android:text="=" />

    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>